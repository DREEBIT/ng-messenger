{
  "name": "ng-messenger",
  "version": "0.0.0",
  "description": "Messaging components",
  "main": "./bundles/ng-messenger.umd.js",
  "module": "./index.js",
  "typings": "./index.d.ts",
  "scripts": {
    "start": "concurrently --raw \"webpack-dev-server --open\" \"npm run test:watch\"",
    "build:demo": "webpack -p",
    "build:umd": "webpack --config webpack.config.umd.ts",
    "build:ngc": "ngc -p tsconfig-ngc.json",
    "build:dist": "npm run build:umd && npm run build:ngc",
    "build:clean": "rm -rf dist",
    "test": "karma start --single-run",
    "test:watch": "karma start --auto-watch",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "compodoc": "compodoc -p tsconfig-compodoc.json -d docs -b /ng-messenger/docs/ --disableGraph --disableCoverage --disablePrivateOrInternalSupport",
    "gh-pages": "git checkout gh-pages && git merge master --no-edit --no-ff && npm run build:demo && npm run compodoc && git add . && git commit -m 'chore: build demo and docs' && git push && git checkout master",
    "copyfiles": "cp package.json LICENSE README.md CHANGELOG.md dist/",
    "prerelease": "npm test",
    "release:git": "git add package.json && git commit -m 'chore: bump version number' && standard-version --first-release && git push --follow-tags origin master",
    "release:npm": "npm run build:dist && npm run copyfiles && cd dist/;npm publish",
    "release":"npm run release:git && npm run release:npm",
    "postrelease": "npm run build:clean && npm run gh-pages",
    "commitmsg": "validate-commit-msg",
    "codecov": "cat coverage/lcov.info | codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dreebit/ng-messenger.git"
  },
  "keywords": [
    "angular2",
    "angular"
  ],
  "author": "Toni MoÌˆckel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dreebit/ng-messenger/issues"
  },
  "homepage": "https://github.com/dreebit/ng-messenger#readme",
  "devDependencies": {
    "@angular/common": "^2.1.0",
    "@angular/compiler": "^2.1.0",
    "@angular/compiler-cli": "^2.1.0",
    "@angular/core": "^2.1.0",
    "@angular/platform-browser": "^2.1.0",
    "@angular/platform-browser-dynamic": "^2.1.0",
    "@types/chai": "^3.4.30",
    "@types/core-js": "^0.9.32",
    "@types/jasmine": "2.2.33",
    "@types/node": "7.0.0",
    "@types/sinon": "^1.16.27",
    "@types/sinon-chai": "^2.7.26",
    "@types/webpack": "^2.2.8",
    "awesome-typescript-loader": "^3.0.8",
    "chai": "^3.5.0",
    "codecov-lite": "^0.1.3",
    "codelyzer": "^2.0.0",
    "commitizen": "^2.8.1",
    "compodoc": "^0.0.41",
    "concurrently": "^3.0.0",
    "conventional-changelog": "^1.1.0",
    "conventional-changelog-cli": "^1.2.0",
    "core-js": "^2.4.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.0",
    "imports-loader": "^0.7.0",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jasmine-core": "^2.5.0",
    "karma": "^1.4.1",
    "karma-coverage-istanbul-reporter": "^0.3.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.1",
    "phantomjs-prebuilt": "^2.1.7",
    "rxjs": "^5.0.1",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "standard-version": "^4.0.0",
    "ts-node": "^2.0.0",
    "tslint": "^4.0.2",
    "tslint-loader": "^3.3.0",
    "typescript": "~2.0.3",
    "validate-commit-msg": "^2.8.0",
    "webpack": "^2.2.0",
    "webpack-angular-externals": "^1.0.0",
    "webpack-dev-server": "^2.2.0",
    "webpack-rxjs-externals": "^1.0.0",
    "zone.js": "^0.7.4"
  },
  "peerDependencies": {
    "@angular/core": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
